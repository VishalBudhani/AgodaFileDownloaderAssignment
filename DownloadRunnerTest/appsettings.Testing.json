{
  "FileDownloadLocation": "E:\\DownloadFilesOutput\\DownloadedFiles\\",
  "UrlInformationFile": "E:\\DownloadFilesOutput\\URLFolder\\UrlInformation.txt",
  "MaximumRetry": "3",
  "TimeGapBetweenRetires": "10",
  "BlockSizeForDownload": "8192",
  "MaxFileNameLength": "100",
  "FtpUserName": "Test",
  "FtpPassword": "Test",
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.RollingFile" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "E:\\DownloadFilesOutput\\Logs\\log-{Date}.txt",
          "shared": "true",
          "retainedFileCountLimit": "7",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      }
    ]
  }
}
